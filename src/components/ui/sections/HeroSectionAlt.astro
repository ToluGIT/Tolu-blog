---
import GithubBtn from '@components/ui/buttons/GithubBtn.astro'

const { title, subTitle, url } = Astro.props

const btnTitle = 'Continue to Github'

interface Props {
    title: string
    subTitle?: string
    url?: string
}
---

<section class="relative mx-auto max-w-[85rem] px-4 pb-24 pt-10 sm:px-6 lg:px-8">
  <div class="absolute left-0 top-[55%] scale-90 md:top-[20%] xl:left-[10%] xl:top-[25%]">
    <svg
        width="64"
        height="64"
        fill="none"
        stroke-width="1.5"
        color="#3b82f6"
        viewBox="0 0 24 24"
    >
      <path
          fill="#3b82f6"
          stroke="#3b82f6"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 23a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM3 8a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM3 18a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z"
      ></path>
      <path
          stroke="#3b82f6"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21 7.353v9.294a.6.6 0 0 1-.309.525l-8.4 4.666a.6.6 0 0 1-.582 0l-8.4-4.666A.6.6 0 0 1 3 16.647V7.353a.6.6 0 0 1 .309-.524l8.4-4.667a.6.6 0 0 1 .582 0l8.4 4.667a.6.6 0 0 1 .309.524Z"
      ></path>
      <path
          stroke="#3b82f6"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m3.528 7.294 8.18 4.544a.6.6 0 0 0 .583 0l8.209-4.56M12 21v-9"
      ></path>
    </svg>
  </div>
  <div class="absolute left-[85%] -top-4 scale-75">
    <svg
        width="72"
        height="72"
        fill="none"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        class="animate-pulse"
    >
      <!-- Security Shield -->
      <path
          stroke="#3b82f6"
          fill="rgba(59, 130, 246, 0.1)"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 2L3 6v6.09c0 5.81 3.84 11.29 9 12.91 5.16-1.62 9-7.1 9-12.91V6l-9-4z"
      ></path>
      <!-- Code brackets inside shield -->
      <path
          stroke="#60a5fa"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 10l-2 2 2 2M16 10l2 2-2 2"
      ></path>
      <!-- Lock icon in center -->
      <circle
          cx="12"
          cy="12"
          r="1.5"
          fill="#3b82f6"
      ></circle>
      <!-- Floating dots for tech effect -->
      <circle cx="6" cy="8" r="0.8" fill="#60a5fa" opacity="0.6"></circle>
      <circle cx="18" cy="9" r="0.8" fill="#60a5fa" opacity="0.4"></circle>
      <circle cx="7" cy="16" r="0.8" fill="#60a5fa" opacity="0.5"></circle>
    </svg>
  </div>
  <div
      class="absolute bottom-[5%] left-[60%] scale-[.6] xl:bottom-[15%] xl:left-[35%]"
  >
    <svg
        width="80"
        height="80"
        fill="none"
        stroke-width="1.5"
        viewBox="0 0 24 24"
        class="animate-bounce"
        style="animation-duration: 3s;"
    >
      <!-- CI/CD Pipeline Flow -->
      <!-- Code Repository -->
      <rect
          x="2"
          y="3"
          width="4"
          height="3"
          rx="1"
          stroke="#3b82f6"
          fill="rgba(59, 130, 246, 0.2)"
      ></rect>
      
      <!-- Build Stage -->
      <circle
          cx="12"
          cy="8"
          r="2"
          stroke="#60a5fa"
          fill="rgba(96, 165, 250, 0.2)"
      ></circle>
      
      <!-- Deploy Stage -->
      <rect
          x="18"
          y="15"
          width="4"
          height="3"
          rx="1"
          stroke="#3b82f6"
          fill="rgba(59, 130, 246, 0.2)"
      ></rect>
      
      <!-- Pipeline Arrows -->
      <path
          stroke="#60a5fa"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 4.5L10 6.5M14 8L18 16"
      ></path>
      
      <!-- Success Checkmarks -->
      <path
          stroke="#10b981"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M3 4.5L4 5.5L6 3.5M11 8L12 9L14 7M19 16L20 17L22 15"
      ></path>
      
      <!-- Floating particles -->
      <circle cx="8" cy="12" r="0.5" fill="#60a5fa" opacity="0.7"></circle>
      <circle cx="15" cy="5" r="0.5" fill="#60a5fa" opacity="0.5"></circle>
      <circle cx="6" cy="20" r="0.5" fill="#60a5fa" opacity="0.6"></circle>
    </svg>
  </div>
  <!-- Hero Section Heading -->
  <div class="mx-auto mt-5 max-w-xl text-center">
    <h2
        class="block text-balance text-4xl font-bold leading-tight tracking-tight text-neutral-800 dark:text-neutral-200 md:text-5xl lg:text-6xl"
    >
      {title}
    </h2>
  </div>
  <!-- Hero Section Sub-heading -->
  <div class="mx-auto mt-5 max-w-3xl text-center">
    {
      subTitle && (
        <p class="text-pretty text-lg text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <!-- Github Button -->
  {
    url && (
      <div class="mt-8 flex justify-center gap-3">
        <GithubBtn url={url} title={btnTitle} />
      </div>
    )
  }
</section>
